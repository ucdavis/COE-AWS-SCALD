{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Statement1",
            "Effect": "Allow",
            "Action": [
                "dynamodb:GetItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:PutItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:us-west-2:<account-number>:table/COE-IT-Kudos",
                "arn:aws:dynamodb:us-west-2:<account-number>:table/COE-IT-Kudos/index/*"
            ]
        }
    ]
}
